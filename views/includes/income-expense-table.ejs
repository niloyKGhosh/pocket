<div class="income-expense-table">
	<ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
		<li class="nav-item">
			<a
				class="nav-link active nav-income"
				id="home-tab"
				data-toggle="tab"
				href="#home"
				role="tab"
				aria-controls="home"
				aria-selected="true"
				><span class="dollar-sign">$</span>Income</a
			>
		</li>
		<li class="nav-item">
			<a
				class="nav-link nav-expense"
				id="profile-tab"
				data-toggle="tab"
				href="#profile"
				role="tab"
				aria-controls="profile"
				aria-selected="false"
				><span class="dollar-sign">ðŸ’°</span>Expense</a
			>
		</li>
	</ul>
	<div class="tab-content text-center" id="myTabContent">
		<div
			class="tab-pane fade show active"
			id="home"
			role="tabpanel"
			aria-labelledby="home-tab"
		>
			<table class="table table-striped table-dark">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Transaction</th>
						<th scope="col">$ Amount</th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					<% if (allIncomes.length > 0) { %> <% for (let income of
					allIncomes) { %>
					<tr>
						<th scope="row">1</th>
						<td><%=income.title%></td>
						<td><%=income.amount%></td>
						<td>
							<div class="row">
								<div class="col-2 offset-md-4">
									<a href="#" id="delete-btn"
										><span class="far fa-trash-alt"></span
									></a>
								</div>
								<div class="col-2">
									<a href="#" id="edit-btn"
										><span class="far fa-edit"></span
									></a>
								</div>
							</div>
						</td>
					</tr>
					<% } %> <% } else { %>
					<th scope="row">-</th>
					<td class="text-center">No Incomes Posted</td>
					<td></td>
					<td></td>

					<% } %>
				</tbody>
			</table>
		</div>
		<div
			class="tab-pane fade"
			id="profile"
			role="tabpanel"
			aria-labelledby="profile-tab"
		>
			<table class="table table-striped table-dark">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Transaction</th>
						<th scope="col">$ Amount</th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					<% if (allExpenses.length > 0) { %> <% for (let expense of
					allExpenses) { %>
					<tr>
						<th scope="row">1</th>
						<td><%=expense.title%></td>
						<td><%=expense.amount%></td>
						<td>
							<div class="row">
								<div class="col-2 offset-md-4">
									<a href="#" id="delete-btn"
										><span class="far fa-trash-alt"></span
									></a>
								</div>
								<div class="col-2">
									<a href="#" id="edit-btn"
										><span class="far fa-edit"></span
									></a>
								</div>
							</div>
						</td>
					</tr>
					<% } %> <% } else { %>
					<th scope="row">-</th>
					<td class="text-center">No Expenses Posted</td>
					<td></td>
					<td></td>

					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</div>
